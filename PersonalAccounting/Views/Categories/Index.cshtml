@model List<PersonalAccounting.Models.Category>
@{
    ViewData["Title"] = "دسته‌بندی‌ها";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>دسته‌بندی‌ها</h3>
    <button class="btn btn-primary" id="btnCreate" data-url="@Url.Action("Create")"><i class="fa fa-plus"></i> افزودن</button>
</div>

<table id="categoriesTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>نام</th>
            <th style="width:120px">عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr data-id="@item.Id">
                <td>@item.Name</td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <button class="btn btn-outline-warning btn-edit" data-url="@Url.Action("Edit", new { id = item.Id })"><i class="fa fa-pen"></i></button>
                        <button class="btn btn-outline-danger btn-delete" data-url="@Url.Action("Delete", new { id = item.Id })"><i class="fa fa-trash"></i></button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
<script>
$(function(){
    new DataTable('#categoriesTable', { language: { url: 'https://cdn.datatables.net/plug-ins/2.0.8/i18n/fa.json' } });

    function openModal(url, title){
        $('#modalContainer .modal-title').text(title);
        $('#modalContainer .modal-body').load(url, function(){
            new bootstrap.Modal(document.getElementById('modalContainer')).show();
        });
    }

    $('#btnCreate').on('click', function(){ openModal($(this).data('url'), 'ایجاد دسته‌بندی'); });
    $('#categoriesTable').on('click', '.btn-edit', function(){ openModal($(this).data('url'), 'ویرایش دسته‌بندی'); });
    $('#categoriesTable').on('click', '.btn-delete', function(){ openModal($(this).data('url'), 'حذف دسته‌بندی'); });
});
</script>
}